<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('/build/images/images/logo-anaisguedin.png') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Kat Conseil{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

        {% endblock %}

    </head>
    <body>

        {{ include('layouts/partials/_flash_messages.html.twig') }}

        {{ include('layouts/partials/_nav.html.twig') }}
        {% if app.user %}
            <div class="h5 my-3 text-center">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <main role="main" class="container">
            {% block body %}{% endblock %}
        </main>



        {{ include('layouts/partials/footer.html.twig') }}

    {% block javascripts %}

        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
