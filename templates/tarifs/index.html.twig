{% extends 'layouts/base.html.twig' %}

{% block title 'Mon expertise' %}

{% block body %}
<section class="expertise mt-5">
    <div class="jumbotron ">
        <div class="intro">
        </div>
    </div>


    <div class="wrapper">
    {% if tarifss| length > 0 %}
        <h1 class="mb-3 text-center text-muted mt-5">{{  pluralize(tarifss| length, 'Prestation') }}</h1>



        {% for row in tarifss|batch(1) %}
            <div class="row my-5">
                {% for tarifs in row %}
                    <div class="col-md-12">
                        <article class="blog ">
                            <div class="mw-100  rounded-top overflow-hidden">
                                <a href="{{ path('app_tarifs_show', {id: tarifs.id}) }}">

                                </a>
                            </div>
                            <h2 class="h4 pl-3 pt-3">
                                <a href="{{ path('app_tarifs_show', {id: tarifs.id}) }}"
                                   class="text-secondary text-decoration-none">{{ tarifs.title }} |
                                    <span class="fw-bolder">{{ tarifs.tarif }}</span>€
                                </a>
                            </h2>
                            <p class="pl-3 pb-5 text-muted h5"><small>{{ tarifs.description}}</small>

                            </p>
                        </article>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

    {% else %}
        {# <p class="h1 mt-5 Text-center-justify">Pas encore de tarifs. <a href="{{ path('app_tarifs_new') }}">Créez un tarif</a></p> #}
    {% endif %}
    </div>
</section>
{% endblock %}
