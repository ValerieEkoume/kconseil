
{% extends 'layouts/base.html.twig' %}

{% block title blog.title %}

{% block body %}

    <section class="show">
     <div class="row">
         <div class="col-md-6 mx-auto">
                 <article class="blog  rounded ">
                     <div class="mw-100 rounded-top overflow-hidden">
                         <a href="{{ path('app_blogs_show', {id: blog.id}) }}">
                             <img src="{{(blog.imageName ? vich_uploader_asset(blog) : asset('images/placeholder.jpg')) |
                             imagine_filter  ('squared_thumbnail_medium') }}" alt="{{ blog.title }}" class="w-100 ">
                         </a>
                     </div>
                     <h1 class="h5 pl-3 pt-3">
                         <a href="{{ path('app_blogs_show', {id: blog.id}) }}"
                            class="text-secondary text-decoration-none">{{ blog.title }}
                         </a>
                     </h1>
                     <p class="pl-3 pb-1 text-muted "><small>
                             Cr√©er
                             <time datetime="{{ blog.createdAt | date('d-m-Y H:i:s')}}">
                                 {{ blog.createdAt|ago}}
                             </time>
                             par {{ blog.prenom }} {{ blog.nom }}
                         </small>
                     </p>

             </article>

         </div>
             <div class="mt-3">
                <p class="pl-3 pb-3">{{ blog.article }}</p>
             </div>
     </div>

    </section>
{% endblock %}
